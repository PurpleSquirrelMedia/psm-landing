{
  "routes": [
    {
      "route": "/app/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/upload*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/profile*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/library*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/earnings*",
      "allowedRoles": ["creator", "authenticated"]
    },
    {
      "route": "/settings*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/login.html"
    },
    {
      "route": "/blog",
      "rewrite": "/blog.html"
    },
    {
      "route": "/about",
      "rewrite": "/about.html"
    },
    {
      "route": "/contact",
      "rewrite": "/contact.html"
    },
    {
      "route": "/plans",
      "rewrite": "/plans.html"
    },
    {
      "route": "/signup",
      "rewrite": "/signup.html"
    },
    {
      "route": "/get-started",
      "rewrite": "/signup.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "*.{css,js,png,jpg,gif,ico,svg,woff,woff2}"]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://unpkg.com https://www.youtube.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; frame-src https://www.youtube.com https://www.youtube-nocookie.com; connect-src 'self' https://*.trycloudflare.com https://*.supabase.co wss://*.supabase.co;"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
